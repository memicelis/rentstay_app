<!-- app/views/main/add_house.html.erb -->

<h1>Add a New House</h1>

<!-- Your form for adding a new house goes here -->
<%= form_for @house do |f| %>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit "Add House" %>
<% end %>